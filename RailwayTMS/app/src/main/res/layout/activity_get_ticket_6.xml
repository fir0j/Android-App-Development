<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".GetTicket_Activity6"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/button_exit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="#e74c3c"
        android:text="EXIT"
        android:textColor="#ffffff"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.CardView
        android:layout_width="340dp"
        android:layout_height="502dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#1abc9c"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_ticket"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:background="#2ecc71"
                android:text="TICKET"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/userid_text"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/button_ticket"
                android:layout_alignTop="@+id/ticket_TID"
                android:text="USER ID:"
                android:textColor="#000000"
                android:textColorHint="#d35400"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/seatno_text"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/button_ticket"
                android:layout_alignTop="@+id/ticket_Seatno"
                android:text="SEATNO:"
                android:textColor="#000000"
                android:textColorHint="#d35400"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/departure_text"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/button_ticket"
                android:layout_alignTop="@+id/ticket_Departure"
                android:text="Departure:"
                android:textColor="#000000"
                android:textColorHint="#d35400"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/from_text"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/button_ticket"
                android:layout_alignTop="@+id/ticket_From"
                android:text="FROM:"
                android:textColor="#000000"
                android:textColorHint="#d35400"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/to_text"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/button_ticket"
                android:layout_alignTop="@+id/ticket_To"
                android:text="TO:"
                android:textColor="#000000"
                android:textColorHint="#d35400"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/ticket_TID"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/button_ticket"
                android:layout_alignParentTop="true"
                android:layout_marginTop="124dp"
                android:hint="TicketID"
                android:text=""
                android:textColor="#d35400"
                android:textColorHint="#d35400"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/ticket_Seatno"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/button_ticket"
                android:layout_alignParentTop="true"
                android:layout_marginTop="203dp"
                android:hint="SeatNO"
                android:text=""
                android:textColor="#d35400"
                android:textColorHint="#d35400"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/ticket_Departure"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/button_ticket"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="189dp"
                android:hint="Daparture date"
                android:text=""
                android:textColor="#d35400"
                android:textColorHint="#d35400"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/ticket_From"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/button_ticket"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="112dp"
                android:hint="Source"
                android:text=""
                android:textColor="#d35400"
                android:textColorHint="#d35400"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/ticket_To"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/button_ticket"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="38dp"
                android:hint="Destination"
                android:text=""
                android:textColor="#d35400"
                android:textColorHint="#d35400"
                android:textSize="24sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>